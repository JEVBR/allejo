<div class="home-index-wrapper">
  <!-- Upper Index -->
  <div class="home-index-upper-wrapper">
    <div class="home-index-upper-box">
      <div class="row">
        <div class="col col-md-12">
          <!-- Title -->
          <div class="home-index-title">
            <h2>Seu trabalho é jogar futeb<i class="fas fa-futbol"></i>l,  resto é com a gente. </h2>
          </div>
          <!-- End Title -->

          <!-- Search Input -->
          <div class="home-index-search">
            <input type="text" value=" Buscar quadras em São Paulo" style="width: 480px">
            <input type="text" value="26/02/2018" style="width: 96px">
            <input type="text" value="20:00 - 23:00" style="width: 120px">
            <input type="text" value=" Society" style="width: 80px">
            <button>Buscar</button>
          </div>
          <!-- End Search Input -->
        </div>
      </div>
    </div>
  </div>
  <!-- End Upper Index -->

  <!-- Lower Wrapper -->
  <div class="home-index-middle-wrapper">
    <div class="row">
      <div class="col col-md-12">

  <!-- Search Form -->
  <div class="row" class="col col-md-3">
      <div class="homes-index-search">
      <%= form_tag(pitches_path, method: :get) do %>
        <%= label_tag 'Local de referência:' %>
        <%= text_field_tag :location, params[:location], :class => 'searchfield' %>
        <%= label_tag 'Distância máxima:' %>
        <%= select_tag :max_dist, options_for_select([ ["-", "-"],["5km","5km"], ["10km", "10km"], ["15km", "15km"], ["30km", "30km"]], params[:max_dist])  %>
        <%= submit_tag 'Pesquisar' %>
      <% end %>
      </div>
  </div>
  <!-- End Search Form -->


        <!-- Map -->
        <div class="home-index-map">
          <!-- Map Div -->
          <div class="map-wrapper">
            <div
            id="map"
            style="width: 100%;
            height: 700px;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
            ></div>
          </div>

        </div>
        <!-- End Map -->
      </div>
    </div>

  </div>
  <!-- End Lower Wrapper -->

  <div class="home-index-lower-wrapper">
    <div class="home-index-lower-box">

    </div>
  </div>
</div>



