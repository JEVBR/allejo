<div class="home-wrapper">
  <div class="home-index-box">
    <div class="row">
      <div class="home-index-wrapper">
        <!-- Upper Index -->
        <div class="home-index-upper-wrapper">
          <div class="home-index-upper-box">

            <div class="home-index-title">
              <h2>Buscar Partidas</h2>
            </div>
              <div>
                    <span class="home-index-search-bar">
                      <%= form_tag(pitches_path, method: :get) do %>
                      <%= text_field_tag  :location,
                      params[:location],
                      # :value => @searchfield,
                      :style => "width: 480px",
                      # :class => 'searchfield',
                      :placeholder => 'Digite aqui o endereÃ§o desejado' %>

                      <%= select_tag :max_dist, options_for_select([ ["3km", "3"],["5km","5"], ["10km", "10"], ["15km", "15"], ["30km", "30"]], params[:max_dist]), :style => "width: 120px" %>
                      <%= select_tag :category_id, options_from_collection_for_select(@categories, "id", "name", params[:category_id]) %>
                      <%= submit_tag 'Pesquisar', :class => 'submit-tag-btn' %>

                      <% end %>
                    </span>

              </div>
            </div>
          </div>
        <!-- End Upper Index -->

        <!-- Lower Wrapper -->

        <div class="home-index-middle-wrapper">
          <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">

            <!-- Map -->
            <div class="home-index-map">
              <!-- Map Div -->

              <div class="map-wrapper">

                <div class="home-index-search">

                  <!-- DO NOT REMOVE, this button starts the ajax communication-->
                  <%= form_tag(pitches_map_path, method: :get, remote: true) do %><% end %>
                  <!-- DO NOT REMOVE, this button starts the ajax communication-->

                </div>

                <div
                id="map"
                style="width: 100%;
                height: 500px;"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
                ></div>

              </div>

            </div>
            <!-- End Map -->
          </div>
        </div>

      </div>
      <!-- End Lower Wrapper -->

      <div class="home-index-lower-wrapper">


      </div>
    </div>
  </div>
</div>




