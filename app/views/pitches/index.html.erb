<div class="pitches-index-wrapper">
  <div class="pitches-index-box">
    <div class="row">
      <div class="home-index-wrapper">
        <!-- Upper Index -->
        <div class="pitches-index-upper-wrapper">
          <div class="pitches-index-upper-box">

            <div class="pitches-index-title">
              <div class="col-md-offset-2 col-md-6">
                <h2>Buscar Partidas</h2>
              </div>
            </div>
              <div>
                    <span class="pitches-index-search-bar">
                      <%= form_tag(pitches_path, method: :get) do %>

                      <div class="col-md-offset-1 col-md-4 col-sm-offset-1 col-sm-5 col-xs-11">  <%= text_field_tag  :location,
                      params[:location],
                      :class => 'search-pitch',
                      :placeholder => 'Digite aqui o endereÃ§o desejado' %> </div>

                      <div class="col-md-2 col-sm-3 col-xs-4"> <%= select_tag :max_dist, options_for_select([ ["3km", "3"],["5km","5"], ["10km", "10"], ["15km", "15"], ["30km", "30"]], params[:max_dist]), :style => "width: 120px" %></div>
                      <div class="col-md-2 col-sm-2 col-xs-4"> <%= select_tag :category_id, options_from_collection_for_select(@categories, "id", "name", params[:category_id]) %></div>
                      <div class="col-xs-4 col-sm-offset-4 col-md-2 col-md-offset-0 "> <%= submit_tag 'Pesquisar', :class => 'submit-tag-btn' %></div>

                      <% end %>
                    </span>

              </div>
            </div>
          </div>
        <!-- End Upper Index -->

        <!-- Lower Wrapper -->

        <div class="pitches-index-middle-wrapper">
          <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">

            <!-- Map -->
            <div class="pitches-index-map">
              <!-- Map Div -->

              <div class="map-wrapper">

                <div class="pitches-index-search">

                  <!-- DO NOT REMOVE, this button starts the ajax communication-->
                  <%= form_tag(pitches_map_path, method: :get, remote: true) do %><% end %>
                  <!-- DO NOT REMOVE, this button starts the ajax communication-->

                </div>

                <div
                id="map"
                style="width: 100%;
                height: 500px;"
                data-markers="<%= @markers.to_json %>"
                data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
                ></div>

              </div>

            </div>
            <!-- End Map -->
          </div>
        </div>

      </div>
      <!-- End Lower Wrapper -->

      <div class="pitches-index-lower-wrapper">


      </div>
    </div>
  </div>
</div>




