<%= simple_form_for @pitch do |f| %>
  <%= f.input :title %>
  <%= f.input :subtitle %>
  <%= f.input :category_id, collection: @categories  %>
  <%= f.input :price %>
  <%= f.input :address %>
  <%= f.input :cep %>
  <%= f.input :cnpj %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>

  <%= f.submit %>
<% end %>
