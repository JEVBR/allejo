<div class="users-signup-wrapper">
  <div class="users-signup-box">
    <div class="container">
      <div class="row">
        <div class="users-signup-upper-wrapper">
          <h2>Cadastro</h2>
          <span class="users-signup-already-login-button">Já tem cadastro? Faça seu <%= render  "devise/shared/links" %> </span>
        </div>
      </div>
    </div>


    <!-- Middle Wrapper -->
    <div class="users-signup-middle-wrapper">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <!-- Form -->
      <div class="form-inputs">
        <div class="row">
          <div class="col col-md-offset-2 col-md-4">
            <!-- Form left seccion -->
            <div class="users-signup-form-left">
              <%= f.input :first_name,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "João" } %>
              <%= f.input :email,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "seuemail@provedor.com" } %>
              <%= f.input :password,
              required: true,
              hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
              input_html: { autocomplete: "new-password" } %>
              <%= f.input :password_confirmation,
              required: true,
              input_html: { autocomplete: "new-password" }, :label => 'Confirmar Senha' %>
            </div>
          </div>
          <!-- End Form left seccion -->

          <!-- Form middle seccion -->
          <div class="col col-md-4">
            <div class="users-signup-form-right">
              <%= f.input :last_name,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "da Silva" } %>
              <%= f.input :nickname,
              required: false,
              autofocus: true,
              input_html: { autocomplete: "Seu apelido" } %>
              <%= f.input :phone,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "11 4321 4321" } %>
              <%= f.input :address,
              required: true,
              autofocus: true,
              input_html: { autocomplete: "Seu endereço" } %>
            <div class="users-signup-photo-input">
              <%= f.input :photo %>
              <%= f.input :photo_cache, as: :hidden %>
            </div>
            </div>
          </div>
          <!-- End Form middle seccion -->

          <!-- Form right seccion -->

          <!-- End Form right seccion -->
        </div>
        <!-- End Form -->
      </div>
    </div>
    <div class="row">
      <div class="form-actions">
        <div class="users-signup-button">
          <div class="col col-md-12">
            <%= f.button :submit, "Criar Conta" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- End Middle Wrapper -->

