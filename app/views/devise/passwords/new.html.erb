<div class="users-forgotpass-wrapper">
  <div class="users-forgotpass-box">
    <div class="container">

      <!-- Title  -->
      <div class="row">
        <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
          <div class="users-forgotpass-title">
            <h2>Esqueceu sua senha?</h2>
          </div>
        </div>
      </div>
      <!-- End Title -->

      <!--Middle Wrapper -->
      <div class="users-forgotpass-middle-wrapper">
        <!-- Form -->
        <div class="users-forgotpass-form">
          <div class="form-inputs">
            <div class="row">
              <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
                <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <%= f.error_notification %>
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
              </div>
            </div>
          </div>
        </div>
        <!-- End Form -->
      </div>
      <!-- End Middle Wrapper -->

      <!-- Lower Wrapper -->
      <div class="users-forgotpass-lower-wrapper">
        <div class="row">
          <div class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1">
            <div class="users-forgotpass-submit-button">
            <div class="users-forgotpass-signforgot-buttons">
              <%= render "devise/shared/links" %>
            </div>
              <div class="form-actions">
                <%= f.button :submit, "Enviar Instruções" %>
              </div>
            <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- End Lower Wrapper -->

    </div>
  </div>
</div>
