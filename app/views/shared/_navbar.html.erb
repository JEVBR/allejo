<div class="navbar-allejo">
  <!-- Logo -->
  <div class="navbar-logo">
    <%= link_to 'Allejo', pitches_path %>
  </div>
  <!-- End Logo -->

  <!-- Dropdown -->
  <div class="navbar-allejo-toggler">
    <div class="dropdown">

    </div>
  </div>
  <!-- End Dropdown  -->

  <!-- Hamburger Menu Navbar -->
  <nav role='navigation'>
    <div id="menuToggle">
      <!--
      A fake / hidden checkbox is used as click reciever,
      so you can use the :checked selector on it.
    -->
    <input type="checkbox"/>
      <!--
      Spans hamburger.
    -->
    <span></span>
    <span></span>
    <span></span>
    <!-- Menu -->
    <ul id="menu">
      <div class="picture">
      <% if user_signed_in? %>
      <%= cl_image_tag current_user.photo, class: "", id: "", "data-toggle" => "" %>
      </div>
      <a href="#"><li style="font-size:16px"><%= link_to users_show_path do %><i class="fa fa-user"></i> <%= t(".profile", default: "Perfil") %><% end %></li></a>
      <a href="#"><li style="font-size:16px"><%= link_to edit_user_registration_path(@user) do %><i class="fa fa-cog"></i>  <%= t(".settings", default: "Configurações") %><% end %></li></a>
      <a href="#"><li style="font-size:16px"><%= link_to destroy_user_session_path, method: :delete do %><i class="fas fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %><% end %></li>
      </a>
      <% else %>
      <!-- Login link (when logged out) -->
      <div class="navbar-allejo-link">
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-allejo-item navbar-allejo-link" %>
      <% end %>
      </div>
    </ul>
    <!-- End Menu -->
  </div>
</nav>
</div>
</div>

